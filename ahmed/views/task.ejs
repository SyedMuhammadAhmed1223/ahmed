<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TO-DO List</title>
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <!-- create a container for the todo list -->
    <div id="todo-container">
      <!-- todo list header -->
      <div id="header">
        <h1>To Do List</h1>
      </div>

      <!-- create input box -->
       <form action="/add-task" method="post">
      <div id="todo-form">
        <input
          type="text"
          class="input-item"
          name="task_name"
          id="input-box"
          placeholder="Add Task"
        />

        <!-- add button -->
        <button id="input-button" type="submit">Add</button>
      </div>
    </form>

      <!-- task list -->
      <h2>Task List</h2>
      <ul id="list-container">
       
        <!-- Enclosed this li in loop and fetch already added task -->
        <li>
            <label>
                <input type="checkbox">
                <span>Sample Task</span>
              </label>
              <!-- Call deleteTask() func onclick -->
              <span class="delete-btn">Delete</span>
        </li>
  
      </ul>
    </div>

    <script type="text/javascript" src="script.js"></script>
  </body>
</html>